{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "mozilla-firefox",
  "title": "Mozilla Firefox",
  "description": "Search and open tabs from bookmarks and history in Mozilla Firefox.",
  "icon": "firefox-logo.png",
  "author": "crisboarna",
  "contributors": [
    "serhii_kravchenko",
    "Laptop765",
    "kud"
  ],
  "categories": [
    "Applications",
    "Developer Tools",
    "Productivity"
  ],
  "platforms": [
    "Windows"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "new-tab",
      "title": "New Tab",
      "subtitle": "Mozilla Firefox",
      "description": "Open a new Mozilla Firefox tab.",
      "mode": "view"
    },
    {
      "name": "search-history",
      "title": "Search History",
      "subtitle": "Mozilla Firefox",
      "description": "Search browser history.",
      "mode": "view"
    },
    {
      "name": "search-bookmarks",
      "title": "Search Bookmarks",
      "subtitle": "Mozilla Firefox",
      "description": "Search browser bookmarks.",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "browserApp",
      "title": "Firefox Application",
      "default": "Firefox",
      "description": "Which Firefox application to use",
      "type": "dropdown",
      "required": false,
      "data": [
        {
          "title": "Firefox",
          "value": "firefox"
        },
        {
          "title": "Firefox Nightly",
          "value": "firefox-nightly"
        },
        {
          "title": "Firefox ESR",
          "value": "firefox-esr"
        },
        {
          "title": "Firefox Developer Edition",
          "value": "firefox-developer-edition"
        }
      ]
    },
    {
      "name": "profileDirectorySuffix",
      "title": "Profile Directory Suffix",
      "default": "default-release",
      "description": "The Firefox profile directory suffix, the portion after the . in about://profiles",
      "type": "textfield",
      "required": false
    },
    {
      "name": "searchEngine",
      "type": "dropdown",
      "required": false,
      "title": "Search Engine",
      "description": "Search Engine for query (default: Google).",
      "default": "Google",
      "data": [
        {
          "title": "Google",
          "value": "google"
        },
        {
          "title": "DuckDuckGo",
          "value": "duckDuckGo"
        },
        {
          "title": "Bing",
          "value": "bing"
        },
        {
          "title": "Baidu",
          "value": "baidu"
        },
        {
          "title": "Brave",
          "value": "brave"
        },
        {
          "title": "Qwant",
          "value": "qwant"
        },
        {
          "title": "Twint",
          "value": "twint"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.0",
    "@raycast/utils": "^1.19.1",
    "sql.js": "1.8.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.6",
    "@types/node": "^24.5.2",
    "@types/react": "^19.0.10",
    "@types/sql.js": "^1.4.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "react": "^19.1.1",
    "react-devtools": "^6.1.5",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
